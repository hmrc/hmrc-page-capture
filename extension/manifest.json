{
  "name": "hmrc-page-capture",
  "description": "A browser extension to capture pages and associated css assets.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "save-assets.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}